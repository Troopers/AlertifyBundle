
{% if theme is not defined %}
    {% set theme = "twitter" %}
{% endif %}

<link href="{{asset('bundles/avalertify/noty/css/noty_theme_'~theme~'.css')}}" rel="stylesheet" type="text/css" />

<script type="text/javascript">
$(document).ready(function(){
    noty({text: "{{ body|raw|trans({}, translationDomain|default('messages')) }}", type:"{{type}}", layout:"{{layout}}", theme: "noty_theme_{{theme}}"{% if timeout is defined %}, timeout : {{timeout}}{% endif %} });
});
</script>

