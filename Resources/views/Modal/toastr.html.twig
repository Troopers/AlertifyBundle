<script type="text/javascript" src="{{asset('bundles/avawesomealertify/toastr/js/toastr.js')}}"></script>
<link rel="stylesheet" href="{{asset('bundles/avawesomealertify/toastr/css/toastr.css')}}">

{% if executeNotification is not defined %}
    {% set executeNotification = true %}
{% endif %}

{# execute the notification only if we want an automatic notification #}
{% if executeNotification == true %}
<script type="text/javascript">
(function() {
  var delay;

  delay = function(ms, func) {
    return setTimeout(func, ms);
  };

  toastr.options = {
    positionClass: 'toast-{{ layout }}'
  };

  delay({% if timeout is defined and timeout != null %} {{ timeout }}{% else %} 1000{% endif %} , function() {
    return toastr.{{ type }}("{{ body|raw|trans({}, translationDomain|default('messages')) }}","{{ ("alert."~type~".label")|trans({}, translationDomain|default('messages')) }}");
  });

}).call(this);
</script>
{% endif %}